<script>
    function openActivM(evt, ActivName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablinks");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(ActivName).style.display = "block";
        evt.currentTarget.className += " active";
    }
    //Cargar el nombre del archivo en un label
    function obtenerNombreArchiP() {
        var texto = document.getElementById('CargarImagenP').files[0].name;
        $("#fichero").text(texto)
    }
    $(document).ready(function () {
        var mens = $("#valRespM").val();
        if (mens != 1) {
            document.getElementById("step1").click();
        }
        else {
            document.getElementById("step2").click();
        }
        $.getJSON('https://api.ipify.org?format=jsonp&callback=?', function (data) {
            $("#ip").val(data.ip);
        });
    });

  
</script>
