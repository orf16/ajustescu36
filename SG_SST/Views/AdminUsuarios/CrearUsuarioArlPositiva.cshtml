@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SG_SST.Models.AdminUsuarios.UsuarioArlPositivaModel
<style>
    .btn-rl {
        width: auto !important;
    }

        .btn-rl a {
            color: #ff7500 !important;
        }
</style>
<div class="panel panel-default" id="contenido" style="margin:53px; background-color: rgba(196, 202,196, 0.1)">
    <div class="panel-heading" style="color:black">
        Creación Usuario Arl Positiva
    </div>
    @using (Html.BeginForm("CrearUsuarioArlPositiva", "AdminUsuarios", FormMethod.Post, new { @id = "formUsuarioArl", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="panel-body form-horizontal">
            <div class="row form-group">
                <div class="col-md-3">
                    @Html.Label("Tipo documento empleador:", new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    @Html.DropDownListFor(x => x.TipoDocumentoEmpresa, Model.TiposDocumento, "Seleccione una opción...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.TipoDocumentoEmpresa, string.Empty, new { @class = "error" })
                </div>
                <div class="col-md-3">
                    @Html.Label("Número identificación empleador:", new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    <a class="msg-ayuda">
                        @Html.TextBoxFor(x => x.DocumentoEmpresa, new { @class = "form-control", @placeholder = "no incluye dígito de verificación" })
                        <label>El número de identificación del empleador no incluye dígito de verificación.</label>
                    </a>
                    @Html.ValidationMessageFor(x => x.DocumentoEmpresa, string.Empty, new { @class = "error" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-3">
                    @Html.Label("Tipo identificación Usuario:", new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    @Html.DropDownListFor(x => x.TipoDocumento, Model.TiposDocumento, "Seleccione una opción...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.TipoDocumento, string.Empty, new { @class = "error" })
                </div>
                <div class="col-md-3">
                    @Html.Label("Número identificación Usuario:", new { @class = "control-label" })
                </div>
                <div class="col-md-2">
                    @Html.TextBoxFor(x => x.Documento, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Documento, string.Empty, new { @class = "error" })
                </div>
                <div class="col-md-1 btn-rl">
                    <a id="busarRLUsuarioArl" class="glyphicon glyphicon-search form-control" href="javascrip:void(0);"></a>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-3">
                    @Html.Label("Razón social empleador:", new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(x => x.RazonSocialEmpresa, new { @class = "form-control bloqueado", @disabled = "disabled" })
                    @Html.ValidationMessageFor(x => x.RazonSocialEmpresa, string.Empty, new { @class = "error" })
                </div>
                <div class="col-md-3">
                    @Html.Label("Teléfono:", new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(x => x.Telefono, new { @class = "form-control bloqueado", @disabled = "disabled" })
                    @Html.ValidationMessageFor(x => x.Telefono, string.Empty, new { @class = "error" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-3">
                    @Html.Label("Nombres de Usuario:", new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(x => x.Nombres, new { @class = "form-control bloqueado", @disabled = "disabled" })
                    @Html.ValidationMessageFor(x => x.Nombres, string.Empty, new { @class = "error" })
                </div>
                <div class="col-md-3">
                    @Html.Label("Apellidos del Usuario:", new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    @Html.TextBoxFor(x => x.Apellidos, new { @class = "form-control bloqueado", @disabled = "disabled" })
                    @Html.ValidationMessageFor(x => x.Apellidos, string.Empty, new { @class = "error" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-3">
                    @Html.Label("Departamento de cobertura:", new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    @Html.DropDownListFor(x => x.DeptoSedePpalEmpresa, Model.Departamentos, "Seleccione una opción...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.DeptoSedePpalEmpresa, string.Empty, new { @class = "error" })
                </div>
                <div class="col-md-3">
                    @Html.Label("Municipio de cobertura:", new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    @Html.DropDownListFor(x => x.MunicipioSedePpalEmpresa, Model.Municipios, "Seleccione una opción...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.MunicipioSedePpalEmpresa, string.Empty, new { @class = "error" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-3">
                    @Html.Label("Rol del Usuario:", new { @class = "control-label" })
                </div>
                <div class="col-xs-3">
                    @Html.DropDownListFor(x => x.IdRolSeleccionado, Model.RolesSistema, "Seleccione una opción...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.IdRolSeleccionado, string.Empty, new { @class = "error" })
                </div>
                <div class="col-md-3">
                    @Html.Label("Correo Electrónico:", new { @class = "control-label" })
                </div>
                <div class="col-xs-3">
                    @Html.TextBoxFor(x => x.EmailPersona, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.EmailPersona, string.Empty, new { @class = "error" })
                </div>

            </div>
            <div class="row form-group">
                <div class="col-md-3">
                    @Html.Label("Estado :", new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    @Html.DropDownListFor(x => x.EstadoSeleccionado, Model.Estados, "Seleccione una opción...", new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.EstadoSeleccionado, string.Empty, new { @class = "error" })
                </div>
            </div>
            @Html.HiddenFor(x => x.RazonSocialEmpresa)
            @Html.HiddenFor(x => x.Nombres)
            @Html.HiddenFor(x => x.Apellidos)
            @Html.HiddenFor(x => x.MunicipioSedePpalEmpresa)
            <div class="row form-group">
                <div class="col-md-3">
                    <button type="submit" class="boton botonactive">Crear usuario</button>
                </div>
                <div class="col-md-1">
                    @Html.ActionLink("Ir a Inicio", "Index", "Home", null, new { @class = "boton botoncancel" })
                    @*<button type="submit" class="">Crear usuario</button>*@
                </div>
            </div>
        </div>
    }
</div>
@{
    if (ViewBag.Mensaje != null)
    {
        <script type="text/javascript">
                swal({
                    title: 'Atención',
                    text: '@ViewBag.Mensaje',
                    type: 'success',
                    confirmButtonColor: "#7E8A97",
                    confirmButtonText: "OK",
                    closeOnConfirm: false,
                    closeOnCancel: false,
                    html: true
                },
                function (isConfirm) {
                    if (isConfirm) {
                        window.location.href = '../Home/Index';
                    }
                });
        </script>
    }
}
@Scripts.Render("~/Scripts/AdminUsuarios/usuarioArlPositiva.js")