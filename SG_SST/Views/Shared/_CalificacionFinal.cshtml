@model SG_SST.Models.Planificacion.ValoracionFinalModel
<div class="calficacion-final-estmin">
    <div class="row form-group">
        <div class="cal_actual">
            <h4>EL RESULTADO DE LA AUTOEVALUACIÓN DE ESTÁNDARES MÍNIMOS ES:</h4>

        </div>
        

        
    </div>
    <div class="row" style="margin-top:5px;padding-left:5px;padding-right:5px;">
        @{
            decimal puntos = Model.puntoObtenidos;
            puntos = Decimal.Round(puntos, 2);
        }
        <div class="col-xs-12">
            <div class="col-xs-12 col-sm-12 col-md-4">
                <div class="col-xs-12" style="background-color:#EAEDED;padding:2px 5px 2px 5px;border-radius:5px;min-height:100px;">
                    <div class="col-xs-12" style="text-align:center;color:#000">
                        <h4>CRITERIO</h4>
                    </div>
                    <div class="col-xs-12" style="text-align:center;color:#000">
                        <h4>@Model.CriterioValoracion</h4>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4">
                <div class="col-xs-12" style="background-color:#EAEDED;padding:2px 5px 2px 5px;border-radius:5px;min-height:100px;">
                    <div class="col-xs-12" style="text-align:center;color:#000">
                        <h4>VALORACIÓN</h4>
                    </div>
                    <div class="col-xs-12" style="text-align:center;color:#000">
                        <h4>@Model.Valoracion</h4>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4">
                <div class="col-xs-12" style="background-color:#EAEDED;padding:2px 5px 2px 5px;border-radius:5px;min-height:100px;">
                    <div class="col-xs-12" style="text-align:center;color:#000">
                        <h4>PUNTAJE</h4>
                    </div>
                    <div class="col-xs-12" style="text-align:center;color:#000">
                        <h4>@puntos%</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12" style="margin-top:5px;">
            <div class="col-xs-12" style="background-color:#EAEDED;padding:2px 5px 2px 5px;border-radius:5px;">
                <div class="col-xs-12" style="text-align:center;color:#000">
                    <h4>ACCIÓN</h4>
                </div>
                <div class="col-xs-12" style="color:#000;text-align:left">
                    @Html.Raw(Model.Accion)
                </div>
            </div>
        </div>


    </div>
    <div class="row row-centered form-group" style="margin-top:5px;">
        <div class="col-xs-6">
            <button id="_planAccion" type="button" class="boton botoninfo">
                Plan de mejora
                @*<span class="glyphicon glyphicon-save" aria-hidden="true"></span>*@
            </button>
        </div>
        <div class="informe_final col-xs-5">
            <button id="inf_final" type="button" class="boton botoninfo">
                Informe Final
                @*<span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>*@
            </button>
        </div>
    </div>
    

</div>

<div class="modal fade" id="PlanAccionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header cabecera">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:black;text-shadow:none;opacity:1;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="modal-body" id="containeplanaccion">

                </div>
                <div class="row">
                    <div class="col-xs-12" style="text-align:center">
                        <div class="col-xs-12 col-md-6" style="margin-bottom:5px;">
                            <a class="boton botoninfo" href="../EvaluacionEstandarMinimo/DescargarPlanAccionExccel?ideval=@Model.Idval">Descargar hoja de cálculo</a>
                        </div>
                        <div class="col-xs-12 col-md-6" style="margin-bottom:5px;">
                            <a class="boton botoninfo" href="../EvaluacionEstandarMinimo/DescargarPlanAccionPDF?ideval=@Model.Idval">Descargar PDF</a>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="modal-footer" style="text-align:center;margin-top:5px;">
                        <button type="button" class="boton botoncancel" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
